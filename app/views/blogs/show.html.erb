.single-blog {
  width: 520px;
  margin-right: 50px;
}
.blog-box-content {
  margin: 15px 5px 20px 0;
}
.single-image {
  width: 100%;
}
.single-text {
  margin: 15px 5px 20px 0;
  font-size: 15px;
}
.author-case {
  margin-top: 30px;
  border-top: 1px solid #f7f7f7;
  padding: 30px 10px;
  display: flex;
  justify-content: flex-start;
}
.author-image {
  width: 110px;
  height: 110px;
  background-image: url(img/person.jpg);
  background-position: center;
  background-size: cover;
  display: flex;
  justify-content: flex-start;
}
.author-box {
  width: calc(100% - 110px);
  padding: 0 0 0 20px;
}
.author-name {
  font-size: 16px;
  margin-bottom: 5px;
}
.author-text {
  font-size: 10px;
}

